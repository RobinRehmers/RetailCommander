<Window x:Class="RetailCommanderDesktop.DeleteEmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetailCommanderDesktop"
        mc:Ignorable="d"
        Title="DeleteEmployeeForm" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="employeeListBox" Margin="10" SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding FullName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Löschen" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="DeleteSelectedEmployees_Click"/>
    </Grid>
</Window>
